{
  "fileTypes": ["js", "jsx"],
  "injectionSelector": "L:source -comment -string",
  "patterns": [
    {
      "begin": "(?:([sS][tT][yY][lL][eE][dD](?:<[_$[:alpha:]][_$[[:alnum:][, '\"]]]+>)?(?:\\.[_$[:alpha:]][_$[:alnum:]]*|\\(['\"][_$[:alpha:]][_$[:alnum:]]*['\"]\\)|\\([_$[:alpha:]][_$\\.[:alnum:]]*(?:\\s+as\\s+.*?)?\\)))|(glsl|vert|frag))\\s*(`)",
      "beginCaptures": {
        "1": {
          "patterns": [
            {
              "include": "source.ts#expression"
            }
          ]
        },
        "2": {
          "name": "entity.name.function.tagged-template.js"
        },
        "3": {
          "name": "punctuation.definition.string.template.begin.js string.template.js"
        }
      },
      "end": "`",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.template.end.js string.template.js"
        }
      },
      "patterns": [
        {
          "include": "source.glsl"
        }
      ]
    }
  ],
  "scopeName": "glsl-literal"
}
